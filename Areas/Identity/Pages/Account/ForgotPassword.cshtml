@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-80">
        <div class="col-xl-4 col-lg-5 col-md-6">
            <!-- Forgot Password Card -->
            <div class="modern-card">
                <div class="card-header text-center">
                    <div class="app-logo justify-content-center mb-3">
                        <i class="fas fa-boxes-stacked text-primary me-2"></i>
                        <span class="app-name">InventoryPro</span>
                    </div>
                    <h2 class="mb-0">Reset Your Password</h2>
                    <p class="text-muted mb-0">Enter your email to receive a reset link</p>
                </div>

                <div class="card-body">
                    <form method="post" class="modern-form">
                        <div class="alert alert-info">
                            <div class="d-flex">
                                <i class="fas fa-info-circle me-2 mt-1"></i>
                                <div>
                                    <strong>Password Reset:</strong><br>
                                    <small>We'll send you a link to reset your password</small>
                                </div>
                            </div>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Email Field -->
                        <div class="mb-4">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                                   placeholder="Enter your account email address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-modern w-100 py-2 mb-3">
                            <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                        </button>

                        <!-- Back to Login -->
                        <div class="text-center mt-4">
                            <a asp-page="./Login" class="text-primary text-decoration-none fw-semibold">
                                <i class="fas fa-arrow-left me-1"></i>Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Support Card -->
            <div class="modern-card mt-4">
                <div class="card-body text-center">
                    <i class="fas fa-life-ring text-muted mb-3" style="font-size: 2rem;"></i>
                    <h6>Need Help?</h6>
                    <p class="text-muted small mb-0">
                        If you're having trouble accessing your account, contact our support team.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}