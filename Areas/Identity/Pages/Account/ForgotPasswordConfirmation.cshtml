@page
@model ForgotPasswordConfirmation

@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-80">
        <div class="col-xl-4 col-lg-5 col-md-6">
            <!-- Confirmation Card -->
            <div class="modern-card">
                <div class="card-header text-center">
                    <div class="app-logo justify-content-center mb-3">
                        <i class="fas fa-boxes-stacked text-primary me-2"></i>
                        <span class="app-name">InventoryPro</span>
                    </div>
                    <h2 class="mb-0">Check Your Email</h2>
                    <p class="text-muted mb-0">Password reset link sent</p>
                </div>

                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope-open-text text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h4 class="text-success mb-3">Email Sent Successfully!</h4>

                    <p class="text-muted mb-4">
                        Please check your email to reset your password. The link will expire in 1 hour for security reasons.
                    </p>

                    <div class="alert alert-info text-start">
                        <i class="fas fa-lightbulb me-2"></i>
                        <strong>Tip:</strong> If you don't see the email, check your spam folder.
                    </div>

                    <!-- Back to Login -->
                    <div class="mt-4">
                        <a asp-page="./Login" class="btn btn-primary btn-modern w-100 py-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Return to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>