@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-80">
        <div class="col-xl-4 col-lg-5 col-md-6">
            <!-- Login Card -->
            <div class="modern-card">
                <div class="card-header text-center">
                    <div class="app-logo justify-content-center mb-3">
                        <i class="fas fa-boxes-stacked text-primary me-2"></i>
                        <span class="app-name">InventoryPro</span>
                    </div>
                    <h2 class="mb-0">Welcome Back</h2>
                    <p class="text-muted mb-0">Sign in to your account</p>
                </div>

                <div class="card-body">
                    <form id="account" method="post" class="modern-form">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                                   placeholder="Enter your email address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock me-2 text-primary"></i>Password
                            </label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"
                                   placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div class="row align-items-center mb-4">
                            <div class="col">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">
                                        Remember me
                                    </label>
                                </div>
                            </div>
                            <div class="col text-end">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary text-decoration-none">
                                    Forgot password?
                                </a>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button id="login-submit" type="submit" class="btn btn-primary btn-modern w-100 py-2 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </button>

                        <!-- Demo Credentials -->
                        <div class="alert alert-info">
                            <div class="d-flex">
                                <i class="fas fa-info-circle me-2 mt-1"></i>
                                <div>
                                    <strong>Demo Access:</strong><br>
                                    <small>Use the default admin account to explore the system</small>
                                </div>
                            </div>
                        </div>

                        <!-- Register Link -->
                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">
                                Don't have an account?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary text-decoration-none fw-semibold">
                                    Create one here
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Features List -->
            <div class="modern-card mt-4">
                <div class="card-body">
                    <h6 class="mb-3 text-center">Everything you need to manage your inventory</h6>
                    <div class="row text-center">
                        <div class="col-4">
                            <i class="fas fa-boxes text-primary mb-2 d-block"></i>
                            <small class="text-muted">Products</small>
                        </div>
                        <div class="col-4">
                            <i class="fas fa-shopping-cart text-success mb-2 d-block"></i>
                            <small class="text-muted">Orders</small>
                        </div>
                        <div class="col-4">
                            <i class="fas fa-chart-line text-info mb-2 d-block"></i>
                            <small class="text-muted">Analytics</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        .min-vh-80 {
            min-height: 80vh;
        }
    </style>
}