@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title mb-1">🔒 Change Password</h1>
            <p class="text-muted mb-0">Update your account password</p>
        </div>
        <div>
            <a asp-page="./Index" class="btn btn-outline-secondary btn-modern">
                <i class="fas fa-arrow-left me-2"></i>Back to Profile
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="modern-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-key me-2 text-warning"></i>
                        Password Update
                    </h5>
                </div>

                <div class="card-body">
                    <form id="change-password-form" method="post" class="modern-form">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Current Password -->
                        <div class="mb-3">
                            <label asp-for="Input.OldPassword" class="form-label">
                                <i class="fas fa-lock me-2 text-primary"></i>Current Password
                            </label>
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true"
                                   placeholder="Enter your current password" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>

                        <!-- New Password -->
                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label">
                                <i class="fas fa-lock me-2 text-primary"></i>New Password
                            </label>
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true"
                                   placeholder="Enter your new password" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>

                        <!-- Confirm New Password -->
                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-lock me-2 text-primary"></i>Confirm New Password
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"
                                   placeholder="Confirm your new password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Password Requirements -->
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>Password Requirements
                            </h6>
                            <ul class="mb-0 small">
                                <li>At least 6 characters long</li>
                                <li>Use a mix of letters and numbers</li>
                                <li>Avoid common words or patterns</li>
                            </ul>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-modern w-100 py-2">
                                <i class="fas fa-save me-2"></i>Update Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Security Tips -->
            <div class="modern-card mt-4">
                <div class="card-body">
                    <h6 class="mb-3">
                        <i class="fas fa-shield-alt me-2 text-success"></i>
                        Security Tips
                    </h6>
                    <div class="security-tips">
                        <div class="tip-item d-flex align-items-start mb-2">
                            <i class="fas fa-check-circle text-success me-2 mt-1"></i>
                            <small>Use a unique password for each account</small>
                        </div>
                        <div class="tip-item d-flex align-items-start mb-2">
                            <i class="fas fa-check-circle text-success me-2 mt-1"></i>
                            <small>Change your password regularly</small>
                        </div>
                        <div class="tip-item d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-2 mt-1"></i>
                            <small>Never share your password with anyone</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}