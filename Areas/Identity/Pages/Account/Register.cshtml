@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-80">
        <div class="col-xl-4 col-lg-5 col-md-6">
            <!-- Register Card -->
            <div class="modern-card">
                <div class="card-header text-center">
                    <div class="app-logo justify-content-center mb-3">
                        <i class="fas fa-boxes-stacked text-primary me-2"></i>
                        <span class="app-name">InventoryPro</span>
                    </div>
                    <h2 class="mb-0">Create Account</h2>
                    <p class="text-muted mb-0">Join InventoryPro today</p>
                </div>

                <div class="card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="modern-form">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                                   placeholder="Enter your email address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock me-2 text-primary"></i>Password
                            </label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"
                                   placeholder="Create a strong password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Password must be at least 6 characters long
                            </small>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-lock me-2 text-primary"></i>Confirm Password
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"
                                   placeholder="Confirm your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-modern w-100 py-2 mb-3">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </button>

                        <!-- Login Link -->
                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">
                                Already have an account?
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary text-decoration-none fw-semibold">
                                    Sign in here
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Benefits Card -->
            <div class="modern-card mt-4">
                <div class="card-body">
                    <h6 class="mb-3 text-center">Why join InventoryPro?</h6>
                    <div class="benefits-list">
                        <div class="benefit-item d-flex align-items-center mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <small>Manage unlimited products and inventory</small>
                        </div>
                        <div class="benefit-item d-flex align-items-center mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <small>Track sales and generate reports</small>
                        </div>
                        <div class="benefit-item d-flex align-items-center mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <small>Real-time stock alerts and notifications</small>
                        </div>
                        <div class="benefit-item d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <small>Professional invoice generation</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        .min-vh-80 {
            min-height: 80vh;
        }

        .benefits-list {
            font-size: 0.9rem;
        }

        .benefit-item {
            color: var(--text-secondary);
        }
    </style>
}