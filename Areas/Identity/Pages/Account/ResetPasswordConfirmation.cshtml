@page
@model ResetPasswordConfirmationModel

@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-80">
        <div class="col-xl-4 col-lg-5 col-md-6">
            <!-- Success Card -->
            <div class="modern-card">
                <div class="card-header text-center">
                    <div class="app-logo justify-content-center mb-3">
                        <i class="fas fa-boxes-stacked text-primary me-2"></i>
                        <span class="app-name">InventoryPro</span>
                    </div>
                    <h2 class="mb-0">Password Reset</h2>
                    <p class="text-muted mb-0">Successfully completed</p>
                </div>

                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h4 class="text-success mb-3">Password Updated!</h4>

                    <p class="text-muted mb-4">
                        Your password has been reset successfully. You can now log in with your new password.
                    </p>

                    <div class="alert alert-success text-start">
                        <i class="fas fa-shield-alt me-2"></i>
                        <strong>Security Updated:</strong> Your account is now secured with the new password.
                    </div>

                    <!-- Login Button -->
                    <div class="mt-4">
                        <a asp-page="./Login" class="btn btn-primary btn-modern w-100 py-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Continue to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>