@model IEnumerable<InventorySalesDashboard.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title mb-1">🏷️ Category Management</h1>
            <p class="text-muted mb-0">Manage product categories and organization</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary btn-modern">
                <i class="fas fa-plus me-2"></i>Add New Category
            </a>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon">
                    <i class="fas fa-tags"></i>
                </div>
                <div class="metric-value">@Model.Count()</div>
                <div class="metric-label">Total Categories</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon" style="background: rgba(16, 185, 129, 0.1); color: var(--success);">
                    <i class="fas fa-boxes"></i>
                </div>
                <div class="metric-value">@Model.Sum(c => c.Products.Count)</div>
                <div class="metric-label">Total Products</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon" style="background: rgba(99, 102, 241, 0.1); color: var(--primary);">
                    <i class="fas fa-chart-pie"></i>
                </div>
                <div class="metric-value">
                    @Model.Count(c => c.Products.Any())
                </div>
                <div class="metric-label">Active Categories</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon" style="background: rgba(245, 158, 11, 0.1); color: var(--warning);">
                    <i class="fas fa-folder"></i>
                </div>
                <div class="metric-value">
                    @Model.Count(c => !c.Products.Any())
                </div>
                <div class="metric-label">Empty Categories</div>
            </div>
        </div>
    </div>

    <!-- Categories Grid -->
    <div class="row g-4">
        @foreach (var category in Model)
        {
            <div class="col-xl-4 col-lg-6">
                <div class="modern-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">
                                @if (!string.IsNullOrEmpty(category.Icon))
                                {
                                    <i class="@category.Icon me-2"></i>
                                }
                                else
                                {
                                    <i class="fas fa-tag me-2 text-muted"></i>
                                }
                                @category.Name
                            </h5>
                            <span class="badge bg-primary">@category.Products.Count products</span>
                        </div>

                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p class="text-muted small mb-3">@category.Description</p>
                        }

                        <div class="category-stats mb-3">
                            <div class="row text-center">
                                <div class="col-6">
                                    @{
                                        var inStockCount = category.Products.Count(p => p.StockQuantity > p.ReorderLevel);
                                        var lowStockCount = category.Products.Count(p => p.StockQuantity <= p.ReorderLevel && p.StockQuantity > 0);
                                    }
                                    <div class="fw-bold text-success fs-5">@inStockCount</div>
                                    <small class="text-muted">In Stock</small>
                                </div>
                                <div class="col-6">
                                    <div class="fw-bold text-warning fs-5">@lowStockCount</div>
                                    <small class="text-muted">Low Stock</small>
                                </div>
                            </div>
                        </div>

                        <div class="btn-group w-100">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="modern-card">
            <div class="card-body text-center py-5">
                <i class="fas fa-tags text-muted mb-3" style="font-size: 3rem;"></i>
                <h5 class="text-muted">No categories found</h5>
                <p class="text-muted">Start by creating your first product category.</p>
                <a asp-action="Create" class="btn btn-primary btn-modern">
                    <i class="fas fa-plus me-2"></i>Create First Category
                </a>
            </div>
        </div>
    }
</div>