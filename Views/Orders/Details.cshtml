@model InventorySalesDashboard.Models.Order

@{
    ViewData["Title"] = "Order Details";
    var profit = Model.OrderLines.Sum(ol => (ol.UnitPrice - (ol.Product?.CostPrice ?? 0)) * ol.Quantity);
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title mb-1">🛒 Order Details</h1>
            <p class="text-muted mb-0">Complete information for Order #@Model.Id</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary btn-modern">
                <i class="fas fa-arrow-left me-2"></i>Back to Orders
            </a>
            <a asp-action="GenerateInvoice" asp-route-id="@Model.Id" class="btn btn-success btn-modern">
                <i class="fas fa-file-pdf me-2"></i>Download Invoice
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-modern">
                <i class="fas fa-edit me-2"></i>Edit Order
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - Order Information -->
        <div class="col-lg-8">
            <!-- Order Summary Card -->
            <div class="modern-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-receipt me-2 text-primary"></i>
                        Order Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Order ID</label>
                            <div class="fs-5 fw-bold">#@Model.Id</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Order Date</label>
                            <div class="fs-5">
                                <i class="fas fa-calendar me-2 text-muted"></i>
                                @Model.OrderDate.ToString("MMM dd, yyyy")
                            </div>
                            <small class="text-muted">@Model.OrderDate.ToString("h:mm tt")</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Customer Name</label>
                            <div class="fs-5">
                                <i class="fas fa-user me-2 text-muted"></i>
                                @Model.CustomerName
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Order Status</label>
                            <div>
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check-circle me-1"></i>Completed
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items Card -->
            <div class="modern-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-shopping-cart me-2 text-info"></i>
                        Order Items
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.OrderLines != null && Model.OrderLines.Any())
                    {
                        <div class="table-responsive">
                            <table class="table modern-table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var line in Model.OrderLines)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(line.Product?.ImageUrl))
                                                    {
                                                        <img src="@line.Product.ImageUrl" alt="@line.Product.Name"
                                                             class="rounded me-3" style="width: 40px; height: 40px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <div class="fw-semibold">@line.Product?.Name</div>
                                                        <small class="text-muted">SKU: @line.Product?.SKU</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary rounded-pill fs-6">@line.Quantity</span>
                                            </td>
                                            <td class="text-end fw-semibold">@line.UnitPrice.ToString("C")</td>
                                            <td class="text-end fw-bold text-success">@((line.Quantity * line.UnitPrice).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-cart text-muted mb-3" style="font-size: 3rem;"></i>
                            <h5 class="text-muted">No items in this order</h5>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column - Financial Summary -->
        <div class="col-lg-4">
            <!-- Financial Summary Card -->
            <div class="modern-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2 text-success"></i>
                        Financial Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Subtotal</label>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Items total</span>
                            <span class="fw-semibold">@Model.Total.ToString("C")</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Tax (10%)</label>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Sales tax</span>
                            <span class="fw-semibold">@((Model.Total * 0.1m).ToString("C"))</span>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Grand Total</label>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fs-5">Total amount</span>
                            <span class="fs-4 fw-bold text-success">@((Model.Total * 1.1m).ToString("C"))</span>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Profit Analysis</label>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Total profit</span>
                            <span class="fw-bold text-success">@profit.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Profit margin</span>
                            <span class="fw-bold @((profit / Model.Total) >= 0.3m ? "text-success" : (profit / Model.Total) >= 0.15m ? "text-warning" : "text-danger")">
                                @((Model.Total > 0 ? (profit / Model.Total) * 100 : 0).ToString("F1"))%
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Metrics Card -->
            <div class="modern-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2 text-info"></i>
                        Order Metrics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="fs-2 fw-bold text-primary">
                            @Model.OrderLines.Sum(ol => ol.Quantity)
                        </div>
                        <div class="text-muted">Total Items</div>
                    </div>

                    <div class="row text-center">
                        <div class="col-6">
                            <div class="fw-bold fs-5">@Model.OrderLines.Count</div>
                            <small class="text-muted">Products</small>
                        </div>
                        <div class="col-6">
                            <div class="fw-bold fs-5">
                                @((Model.OrderLines.Average(ol => ol.UnitPrice)).ToString("C"))
                            </div>
                            <small class="text-muted">Avg. Price</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>