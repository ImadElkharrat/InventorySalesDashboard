@model IEnumerable<InventorySalesDashboard.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title mb-1">🛒 Order Management</h1>
            <p class="text-muted mb-0">Manage customer orders, track sales, and process invoices</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="ExportToExcel" class="btn btn-success btn-modern">
                <i class="fas fa-file-excel me-2"></i>Export to Excel
            </a>
            <a asp-action="Create" class="btn btn-primary btn-modern">
                <i class="fas fa-plus me-2"></i>Create New Order
            </a>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="metric-value">@Model.Count()</div>
                <div class="metric-label">Total Orders</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon" style="background: rgba(16, 185, 129, 0.1); color: var(--success);">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="metric-value">@Model.Sum(o => o.Total).ToString("C")</div>
                <div class="metric-label">Total Revenue</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon" style="background: rgba(99, 102, 241, 0.1); color: var(--primary);">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div class="metric-value">@Model.Count(o => o.OrderDate.Date == DateTime.Today)</div>
                <div class="metric-label">Today's Orders</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon" style="background: rgba(245, 158, 11, 0.1); color: var(--warning);">
                    <i class="fas fa-users"></i>
                </div>
                <div class="metric-value">@Model.Select(o => o.CustomerName).Distinct().Count()</div>
                <div class="metric-label">Unique Customers</div>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="modern-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-receipt me-2"></i>
                All Orders
            </h5>
            <div class="d-flex gap-2">
                <div class="input-group input-group-sm" style="width: 250px;">
                    <input type="text" class="form-control" placeholder="Search orders..." id="searchInput">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table modern-table" id="ordersTable">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">#@item.Id</div>
                                    <small class="text-muted">@item.OrderDate.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <div class="fw-semibold">@Html.DisplayFor(modelItem => item.CustomerName)</div>
                                </td>
                                <td>
                                    <div class="fw-medium">@item.OrderDate.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@item.OrderDate.ToString("ddd")</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-primary rounded-pill me-2">
                                            @item.OrderLines.Sum(ol => ol.Quantity)
                                        </span>
                                        <span class="text-muted">items</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-success">@item.Total.ToString("C")</div>
                                    @{
                                        var profit = item.OrderLines.Sum(ol => (ol.UnitPrice - (ol.Product?.CostPrice ?? 0)) * ol.Quantity);
                                    }
                                    <small class="text-muted">Profit: @profit.ToString("C")</small>
                                </td>
                                <td>
                                    @{
                                        var statusClass = "bg-success";
                                        var statusIcon = "fa-check-circle";
                                        var statusText = "Completed";
                                    }
                                    <span class="badge @statusClass">
                                        <i class="fas @statusIcon me-1"></i>@statusText
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" data-bs-toggle="tooltip" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="GenerateInvoice" asp-route-id="@item.Id"
                                           class="btn btn-outline-success" data-bs-toggle="tooltip" title="Download Invoice">
                                            <i class="fas fa-file-pdf"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" data-bs-toggle="tooltip" title="Edit Order">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" data-bs-toggle="tooltip" title="Delete Order">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart text-muted mb-3" style="font-size: 3rem;"></i>
                    <h5 class="text-muted">No orders found</h5>
                    <p class="text-muted">Start by creating your first order.</p>
                    <a asp-action="Create" class="btn btn-primary btn-modern">
                        <i class="fas fa-plus me-2"></i>Create First Order
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const ordersTable = document.getElementById('ordersTable');

            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = ordersTable.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

                    for (let row of rows) {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    }
                });
            }
        });
    </script>
}