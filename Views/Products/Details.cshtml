@model InventorySalesDashboard.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title mb-1">📦 Product Details</h1>
            <p class="text-muted mb-0">Complete information about @Model.Name</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary btn-modern">
                <i class="fas fa-arrow-left me-2"></i>Back to Products
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-modern">
                <i class="fas fa-edit me-2"></i>Edit Product
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - Product Info -->
        <div class="col-lg-8">
            <!-- Basic Information Card -->
            <div class="modern-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2 text-primary"></i>
                        Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Product Name</label>
                            <div class="fs-5 fw-bold">@Model.Name</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">SKU</label>
                            <div class="fs-5">
                                <code class="bg-light rounded px-2 py-1">@Model.SKU</code>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label fw-semibold text-muted">Description</label>
                            <div class="p-3 bg-light rounded">
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    @Model.Description
                                }
                                else
                                {
                                    <span class="text-muted">No description provided</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Category</label>
                            <div>
                                @if (Model.Category != null)
                                {
                                    <span class="badge bg-info fs-6">@Model.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not categorized</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Supplier</label>
                            <div>
                                @if (Model.Supplier != null)
                                {
                                    <span class="fw-medium">@Model.Supplier.Name</span>
                                    <br>
                                    <small class="text-muted">@Model.Supplier.Email</small>
                                }
                                else
                                {
                                    <span class="text-muted">No supplier assigned</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pricing Information Card -->
            <div class="modern-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-tag me-2 text-success"></i>
                        Pricing Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="border-end pe-3">
                                <label class="form-label fw-semibold text-muted">Cost Price</label>
                                <div class="fs-4 fw-bold text-primary">@Model.CostPrice.ToString("C")</div>
                                <small class="text-muted">Our cost</small>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="border-end pe-3">
                                <label class="form-label fw-semibold text-muted">Selling Price</label>
                                <div class="fs-4 fw-bold text-success">@Model.Price.ToString("C")</div>
                                <small class="text-muted">Customer price</small>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div>
                                @{
                                    var profit = Model.Price - Model.CostPrice;
                                    var margin = Model.Price > 0 ? (profit / Model.Price) * 100 : 0;
                                }
                                <label class="form-label fw-semibold text-muted">Profit Margin</label>
                                <div class="fs-4 fw-bold @(margin >= 0 ? "text-success" : "text-danger")">
                                    @margin.ToString("F1")%
                                </div>
                                <small class="text-muted">@profit.ToString("C") profit per unit</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Status & Actions -->
        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="modern-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2 text-info"></i>
                        Inventory Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @if (Model.StockQuantity == 0)
                        {
                            <div class="mb-3">
                                <i class="fas fa-times-circle text-danger" style="font-size: 3rem;"></i>
                            </div>
                            <span class="badge bg-danger fs-6">Out of Stock</span>
                        }
                        else if (Model.StockQuantity <= Model.ReorderLevel)
                        {
                            <div class="mb-3">
                                <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                            </div>
                            <span class="badge bg-warning fs-6">Low Stock</span>
                        }
                        else
                        {
                            <div class="mb-3">
                                <i class="fas fa-check-circle text-success" style="font-size: 3rem;"></i>
                            </div>
                            <span class="badge bg-success fs-6">In Stock</span>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Current Stock</label>
                        <div class="d-flex align-items-center">
                            <div class="progress flex-grow-1 me-3" style="height: 10px;">
                                @{
                                    var maxStock = Math.Max(Model.StockQuantity, Model.ReorderLevel * 2);
                                    var progress = maxStock > 0 ? (double)Model.StockQuantity / maxStock * 100 : 0;
                                    progress = Math.Min(progress, 100);

                                    string progressClass = "bg-success";
                                    if (Model.StockQuantity == 0)
                                        progressClass = "bg-danger";
                                    else if (Model.StockQuantity <= Model.ReorderLevel)
                                        progressClass = "bg-warning";
                                }
                                <div class="progress-bar @progressClass" style="width: @progress%"></div>
                            </div>
                            <span class="fw-bold fs-5">@Model.StockQuantity</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Reorder Level</label>
                        <div class="fw-medium">@Model.ReorderLevel units</div>
                        <small class="text-muted">Alert triggers when stock reaches this level</small>
                    </div>

                    <div class="mt-4">
                        <label class="form-label fw-semibold text-muted">Stock Value</label>
                        <div class="fw-bold fs-4 text-primary">
                            @((Model.StockQuantity * Model.CostPrice).ToString("C"))
                        </div>
                        <small class="text-muted">Total value of current inventory</small>
                    </div>
                </div>
            </div>

            <!-- Product Image Card -->
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="modern-card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-image me-2 text-warning"></i>
                            Product Image
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.ImageUrl" alt="@Model.Name"
                             class="img-fluid rounded" style="max-height: 200px;" />
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Quick Actions Card -->
    <div class="modern-card mt-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-bolt me-2 text-warning"></i>
                Quick Actions
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-modern w-100 mb-2">
                        <i class="fas fa-edit me-2"></i>Edit
                    </a>
                    <small class="text-muted">Update product details</small>
                </div>
                <div class="col-md-3 text-center">
                    <a asp-controller="Orders" asp-action="Create" class="btn btn-success btn-modern w-100 mb-2">
                        <i class="fas fa-cart-plus me-2"></i>Sell
                    </a>
                    <small class="text-muted">Create sales order</small>
                </div>
                <div class="col-md-3 text-center">
                    <button class="btn btn-info btn-modern w-100 mb-2" onclick="alert('Stock adjustment feature coming soon!')">
                        <i class="fas fa-exchange-alt me-2"></i>Adjust Stock
                    </button>
                    <small class="text-muted">Update inventory levels</small>
                </div>
                <div class="col-md-3 text-center">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-modern w-100 mb-2">
                        <i class="fas fa-trash me-2"></i>Delete
                    </a>
                    <small class="text-muted">Remove product</small>
                </div>
            </div>
        </div>
    </div>
</div>