@model IEnumerable<InventorySalesDashboard.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title mb-1">🏢 Supplier Management</h1>
            <p class="text-muted mb-0">Manage your product suppliers and contact information</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary btn-modern">
                <i class="fas fa-plus me-2"></i>Add New Supplier
            </a>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <div class="metric-value">@Model.Count()</div>
                <div class="metric-label">Total Suppliers</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon" style="background: rgba(16, 185, 129, 0.1); color: var(--success);">
                    <i class="fas fa-boxes"></i>
                </div>
                <div class="metric-value">
                    @Model.Sum(s => s.Products?.Count ?? 0)
                </div>
                <div class="metric-label">Total Products</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon" style="background: rgba(99, 102, 241, 0.1); color: var(--primary);">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="metric-value">
                    @Model.Count(s => !string.IsNullOrEmpty(s.Email))
                </div>
                <div class="metric-label">With Email</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="metric-card">
                <div class="metric-icon" style="background: rgba(245, 158, 11, 0.1); color: var(--warning);">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="metric-value">
                    @Model.Count(s => !string.IsNullOrEmpty(s.Phone))
                </div>
                <div class="metric-label">With Phone</div>
            </div>
        </div>
    </div>

    <!-- Suppliers Table -->
    <div class="modern-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                All Suppliers
            </h5>
            <div class="d-flex gap-2">
                <div class="input-group input-group-sm" style="width: 250px;">
                    <input type="text" class="form-control" placeholder="Search suppliers..." id="searchInput">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table modern-table" id="suppliersTable">
                    <thead>
                        <tr>
                            <th>Supplier</th>
                            <th>Contact Information</th>
                            <th>Products</th>
                            <th>Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded bg-primary d-flex align-items-center justify-content-center me-3"
                                             style="width: 50px; height: 50px;">
                                            <i class="fas fa-truck text-light"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@Html.DisplayFor(modelItem => item.Name)</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-medium">
                                        @if (!string.IsNullOrEmpty(item.Email))
                                        {
                                            <div>
                                                <i class="fas fa-envelope text-muted me-2"></i>
                                                <a href="mailto:@item.Email" class="text-decoration-none">@item.Email</a>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Phone))
                                        {
                                            <div class="mt-1">
                                                <i class="fas fa-phone text-muted me-2"></i>
                                                <a href="tel:@item.Phone" class="text-decoration-none">@item.Phone</a>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <div class="fw-bold text-primary" style="font-size: 1.5rem;">
                                            @(item.Products?.Count ?? 0)
                                        </div>
                                        <small class="text-muted">Products</small>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Address))
                                    {
                                        <div class="text-muted">
                                            <i class="fas fa-map-marker-alt me-1"></i>
                                            @item.Address.Truncate(30)
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" data-bs-toggle="tooltip" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" data-bs-toggle="tooltip" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" data-bs-toggle="tooltip" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-truck text-muted mb-3" style="font-size: 3rem;"></i>
                    <h5 class="text-muted">No suppliers found</h5>
                    <p class="text-muted">Add your first supplier to start managing your supply chain.</p>
                    <a asp-action="Create" class="btn btn-primary btn-modern">
                        <i class="fas fa-plus me-2"></i>Add First Supplier
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const suppliersTable = document.getElementById('suppliersTable');

            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = suppliersTable.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

                    for (let row of rows) {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    }
                });
            }
        });
    </script>
}